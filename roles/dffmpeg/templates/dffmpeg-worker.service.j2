[Unit]
Description=DFFmpeg Worker Service
After=network.target

[Service]
Type=simple
User={{ dffmpeg_user }}
Group={{ dffmpeg_group }}
WorkingDirectory={{ dffmpeg_base_dir }}/worker
Environment="PATH={{ dffmpeg_base_dir }}/worker/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart={{ dffmpeg_base_dir }}/worker/bin/dffmpeg-worker --config {{ dffmpeg_base_dir }}/worker/dffmpeg-worker.yaml
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
