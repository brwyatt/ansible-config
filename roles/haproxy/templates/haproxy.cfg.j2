global
        log /dev/log    local0
        log /dev/log    local1 notice
        chroot /var/lib/haproxy
        stats socket /run/haproxy/admin.sock mode 660 level admin
        stats timeout 30s
        user {{ haproxy_user }}
        group {{ haproxy_group }}
        daemon

        maxconn {{ haproxy_maxconn }}

        stats socket :{{ haproxy_stats_port}} mode 660 level admin

        # Default SSL material locations
        ca-base /etc/ssl/certs
        crt-base /etc/ssl/private

        # See: https://ssl-config.mozilla.org/#server=haproxy&server-version=2.0.3&config=intermediate
        ssl-default-bind-ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384
        ssl-default-bind-ciphersuites TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256
        ssl-default-bind-options ssl-min-ver TLSv1.2 no-tls-tickets

        tune.ssl.default-dh-param 2048

defaults
        log     global
        mode    {{ haproxy_default_mode }}
        option  httplog
        option  dontlognull
        timeout connect {{ haproxy_timeout_connect }}
        timeout client {{ haproxy_timeout_client }}
        timeout server {{ haproxy_timeout_server }}
        errorfile 400 /etc/haproxy/errors/400.http
        errorfile 403 /etc/haproxy/errors/403.http
        errorfile 408 /etc/haproxy/errors/408.http
        errorfile 500 /etc/haproxy/errors/500.http
        errorfile 502 /etc/haproxy/errors/502.http
        errorfile 503 /etc/haproxy/errors/503.http
        errorfile 504 /etc/haproxy/errors/504.http
        {% for option in haproxy_options -%}
        option {{ option }}
        {% endfor -%}

{% for name, config in (haproxy_resolvers|default({})).items() -%}
resolvers {{ name }}
        {% for ns_name, ns_config in (config.nameservers|default({})).items() -%}
        nameserver {{ ns_name }} {{ ns_config.host }}:{{ ns_config.port }}
        {% endfor -%}
        {% for key, value in (config.options|default({})).items() -%}
        {{ key }} {{ value }}
        {% endfor -%}
{% endfor -%}
{% for name, config in (haproxy_frontends|default({})).items() -%}

frontend {{ name }}
        {%- if config.mode is defined %}
        mode {{ config.mode }}
        {%- endif %}
        bind {{ config.bind.host | default("") }}:{{ config.bind.port }}{% if config.bind.ssl_cert is defined %} ssl cert {{ config.bind.ssl_cert }}{% endif %}

        {%- for option in config.options|default([]) %}
        {{ option }}
        {%- endfor %}

        {%- if config.backend is defined %}
        default_backend {{ config.backend }}
        {%- endif %}
{% endfor -%}
{% for name, config in (haproxy_backends|default({})).items() -%}

backend {{ name }}
        {%- if config.mode is defined %}
        mode {{ config.mode }}
        {%- endif %}
        balance {{ config.balance|default("leastconn") }}

        {%- for option in config.options|default([]) %}
        {{ option }}
        {%- endfor %}
{% endfor -%}
